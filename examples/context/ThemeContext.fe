context Theme {
    current = "light"

    options = [
        @CookieContext(
            value: "light", label: "Light",
            match: cookies|get("theme")|lowercase == "light"
        ),
        @CookieContext(
            value: "dark", label: "Dark",
            match: cookies|get("theme")|lowercase == "dark"
        ),
    ]
}
