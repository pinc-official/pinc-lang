component SlotProvider {
  let slot_default = #Slot;

  let slot_restricted = #Slot(name: "restricted", min: 1, max: 1, constraints: [SubComponent]);
  
  let multi = #Slot(name: "multi") :: els -> for (el in els) {
    <div>{el @@ { class: "item" }}</div>
  };

  let slot_nothing = #Slot(name: "nothing", constraints: []);

  <div class="SlotProvider">
    <area class="slot_default">{slot_default}</area>
    <area class="slot_restricted">{slot_restricted}</area>
    <area class="multi">{multi}</area>
    <area class="slot_nothing">{slot_nothing}</area>
  </div>
}
