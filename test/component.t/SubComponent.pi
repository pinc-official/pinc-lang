component SubComponent {
  let content = #String(key: "content");

  let shouter = #String(key: "shouter", default: "NOTHING!") :: val -> val ++ "!!";
  
  let num = #Int(key: "num") :: val -> val ** 2;
  
  let array_things = #Array(key: "array_things", of: #Int);
  
  let record = #Record(key: "record", of: {
    a: #Int(key: "a", default: 12) :: val -> if (val == 12) "NEEEEIN" else "JAP",
    b?: #Boolean(key: "b"),
    c: #String(key: "c"),
  });

  #Template {
    <div class="SubComponent" data-foo={num}>
      {content}

      {array_things}

      {record.a}
      {record.b}
      {record.c}
      
      {shouter}
    </div>
  }
}