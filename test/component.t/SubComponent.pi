  component HeadlineSecondary {
  let class? = #String(key: "class", default: "");

  let tag? = #String(key: "tag", default: "h3");
  let text = #String(key: "text");
  let subheadline? = #String(key: "subheadline");

  let class = "HeadlineSecondary {| class |}";

  let content =
  <>
    {if (subheadline) <Subheadline text={subheadline} />}
    {text}
  </>;

  if (tag == "h1") {
    <h1 class={class}>{content}</h1>
  } else if (tag == "h2") {
    <h2 class={class}>{content}</h2>
  } else if (tag == "h3") {
    <h3 class={class}>{content}</h3>
  } else if (tag == "h4") {
    <h4 class={class}>{content}</h4>
  } else if (tag == "h5") {
    <h5 class={class}>{content}</h5>
  } else if (tag == "h6") {
    <h6 class={class}>{content}</h6>
  } else {
    "INVALID TAG!"
  }
}
