component Main {
  let stylesheets = #CreatePortal(name: "stylesheets") :: values -> for (value in values) {
    <link rel="stylesheet" href={value} />
  };

  <html>
    <head>
      {stylesheets}
    </head>
    <body>
      <Section />
    </body>
  </html>
}

component MainIf {
  let stylesheets = #CreatePortal(name: "stylesheets") :: values -> for (value in values) {
    <link rel="stylesheet" href={value} />
  };

  let stylesheets = stylesheets <- "foo!"

  <html>
    <body>
      <Section />
      {if(stylesheets != []) {
        <div>NOOOOOOOO!!!! I SHOULD NOT RENDER!</div>
      }}
    </body>
  </html>
}
